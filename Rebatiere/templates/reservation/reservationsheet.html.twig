{% extends 'base.html.twig' %}

{% block stylesheets %}
{# On inclut le CSS parent pour s'assurer que les feuilles de "base" soient bien chargées #}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/reservation.css') }}">

{% endblock %}

{% block body %}

<h1>Bienvenu dans l'espace réservation {{ currentUser }} !</h1>


    <form action="#" method="post">

    <div class="formLine">
         <label for="utilisateurs">Ajoutez un utilisateur :</label>
            <select id="utilisateurs" name="utilisateurs[]" multiple>
               {% for user in users %}
                    <option value="{{ user.id }}">{{ user.username }}</option>
                {% endfor %}
            </select>
    </div>
    
    <div class="formLine">
         <label for="chambers">Sélectionnez une chambre :</label>
            <select id="chambers" name="chambers[]" multiple>
                  {% for chamber in chambers %}
                    <option value="{{ chamber.id }}">{{ chamber.chambername }}</option>
                {% endfor %}
            </select>
    </div>
    
    <div class="formLine">
        <label for="privatisation">Privatisation ? :</label>
        <input type="checkbox" id="privatisation" name="privatisation">
    </div>
    
        <button type="submit">Ajouter</button>
    </form>

{% endblock %}